{
    "browser_specific_settings": {
      "gecko": { "id": "kazcfz@copy-n-paste" }
    },
    "manifest_version": 2,
    "name": "Copy-n-Paste: Clipboard Upload Simplified",
    "version": "0.0.0",
    "description": "Simplifies uploading copied screenshots, images, files from clipboard.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["clipboardRead", "alarms"],
    "content_scripts": [
      {
        "js": ["init.js", "content.js"],
        "all_frames": true,
        "matches": ["<all_urls>"]
      }
    ],
    "background" : { "scripts": ["background.js"] },
    "web_accessible_resources": [
      "overlay.html",
      "init.js",
      "content.js",
      "media/*"
    ]
  }
